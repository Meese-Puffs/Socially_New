<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fourth_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/status_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chevron_left"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"/>


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/magenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="95dp"
        android:layout_marginTop="170dp"/>

    <EditText
        android:id="@+id/Username_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="   Enter your username"
        android:textColorHint="@color/grey"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:background="@drawable/query_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="270dp" />

    <EditText
        android:id="@+id/Password_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="   Enter your password"
        android:textColorHint="@color/grey"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:background="@drawable/query_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="330dp" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textSize="17sp"
        android:textColor="@color/light_magenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="390dp"
        />

    <TextView
        android:id="@+id/log_in"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="26dp"/>


    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="OR"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/light_grey"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="535dp"
        android:layout_marginLeft="170dp"
        />

    <View
        android:id="@+id/firstline"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="550dp"/>

    <View
        android:id="@+id/secondline"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="550dp"/>

    <TextView
        android:id="@+id/No_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/light_magenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="600dp"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="125dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/Sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up."
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/magenta"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="600dp"
        />

    <View
        android:id="@+id/halfline"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="710dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/light_magenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="143dp"
        android:layout_marginTop="730dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_indicator"
        app:tint="@color/light_magenta"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="760dp"
        android:layout_marginLeft="110dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
